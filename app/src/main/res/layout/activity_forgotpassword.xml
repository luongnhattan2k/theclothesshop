<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanh_nhat">

        <ImageButton
            android:id="@+id/ibtnExit"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:background="@null"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size20dp"
            android:gravity="center|left"
            android:text="Quên Mật Khẩu"
            android:textSize="@dimen/size20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size10dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txtDangky"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/size10dp"
        android:gravity="center"
        android:text="Lấy Lại Mật Khẩu"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="32dp"
        android:layout_gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtTaikhoan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size30dp"
            android:layout_marginTop="@dimen/size20dp"
            android:layout_marginRight="@dimen/size30dp"
            android:backgroundTint="#00000000"
            android:ems="10"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size30dp"
            android:layout_marginTop="@dimen/size20dp"
            android:layout_marginRight="@dimen/size30dp"
            android:backgroundTint="#00000000"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/size20dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnDangky"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size30dp"
        android:backgroundTint="@color/xam"
        android:hint="Xác Nhận"
        android:textColorHint="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

</LinearLayout>