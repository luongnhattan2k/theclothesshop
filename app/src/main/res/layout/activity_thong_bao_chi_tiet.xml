<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardview_product"
    android:layout_height="match_parent"
    android:backgroundTint="#C1BFBF"
    android:orientation="vertical"
    tools:context=".ThongBaoChiTietActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanh_nhat">

        <ImageButton
            android:id="@+id/ibtnExit_tintuc"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:background="@null"
            android:contentDescription="TODO"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size20dp"
            android:text="Thông Tin Tin Tức"
            android:fontFamily="serif"
            android:textSize="@dimen/size20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Bantinso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:gravity="center"
            android:text="Bản tin số: "
            android:textSize="18sp"
            android:fontFamily="serif" />

        <TextView
            android:id="@+id/txt_Ngaydangtintuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:gravity="center"
            android:text="Ngày đăng tin"
            android:textSize="18sp"
            android:fontFamily="serif" />

        <TextView
            android:id="@+id/txt_Tieudetintuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:gravity="center"
            android:text="Tiêu đề"
            android:textSize="18sp"
            android:fontFamily="serif" />

        <ImageView
            android:id="@+id/img_Hinhanhtintuc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txt_Noidungtintuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:gravity="center"
            android:text="Nội dung tin tức"
            android:textSize="18sp"
            android:fontFamily="serif" />

    </LinearLayout>

</LinearLayout>