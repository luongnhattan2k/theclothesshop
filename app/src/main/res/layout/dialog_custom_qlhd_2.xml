<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10dp"
        android:gravity="center"
        android:text="Thống Kê Doanh Thu"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#ff00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="Từ ngày:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_Ngaythongke_batdau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="dd/MM/yyyy"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_Chonngaybatdau_qlhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10dp"
            android:text="Chọn"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="Đến ngày:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_Ngaythongke_ketthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="dd/MM/yyyy"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_Chonngaykethuc_qlhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginLeft="@dimen/size10dp"
            android:text="Chọn"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="Doanh thu:"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_Tongtienthongke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size10dp"
            android:gravity="left"
            android:text="0 VNĐ"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Thoatthongke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/size20dp"
        android:backgroundTint="#ff00"
        android:text="Thoát"
        android:textSize="12sp"/>


</LinearLayout>