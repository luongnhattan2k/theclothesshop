<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:background="@color/xam"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    tools:context=".FragmentApp.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtBaomat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/size20dp"
            android:background="@color/white"
            android:text="Thông Tin Khách Hàng"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/baseline_chevron_right_36"/>

        <TextView
            android:id="@+id/txtDoimatkhau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/size20dp"
            android:gravity="center|left"
            android:background="@color/white"
            android:text="Đổi Mật Khẩu"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/baseline_chevron_right_36"/>

        <TextView
            android:id="@+id/txtLichsu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1.1"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/size20dp"
            android:gravity="center|left"
            android:background="@color/white"
            android:text="Lịch Sử Giao Dịch"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/baseline_chevron_right_36"/>

    </LinearLayout>

</LinearLayout>