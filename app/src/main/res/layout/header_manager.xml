<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/header_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size10dp"
        android:paddingTop="@dimen/size60dp"
        android:fontFamily="cursive"
        android:text="Welcome Manager"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTennguoidung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size20dp"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:hint="Tên Khách Hàng"
        android:paddingLeft="@dimen/size10dp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/size20dp"
        android:textStyle="bold" />

</LinearLayout>