<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer_qlhd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_qlhd"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Chọn thời gian"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:background="@color/xam"/>


    <Button
        android:id="@+id/btn_Thongketheongay_qlhd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/xanh_nhat"
        android:text="Thống kê theo ngày"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_Thongketheothang_qlhd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/xanh_nhat"
        android:text="Thống kê theo tháng"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_Thongketheonam_qlhd"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/size10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/xanh_nhat"
        android:text="Thống kê theo năm"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="12sp" />



</LinearLayout>