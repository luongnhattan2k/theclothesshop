<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#C1BFBF"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/chuaxem"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:layout_width="@dimen/size30dp"
            android:layout_height="@dimen/size30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avata_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tentk_bantin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="BOOKSHOP"/>

                    <TextView
                        android:id="@+id/gio_bantin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tieude_thongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/noidung_thongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung"
                android:padding="5dp"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="3"/>
            <!--            <TextView-->
            <!--                android:id="@+id/thoigian_thongbao"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Thời gian"-->
            <!--                android:padding="5dp"-->
            <!--                android:textSize="15sp"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>