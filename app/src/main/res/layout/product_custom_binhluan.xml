<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/button_custom_1"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_Hinhdaidien_binhluan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rb_saodanhgia_binhluan"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:theme="@style/RatingBar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_NoiDung_binhluan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_Hinhdaidien_binhluan"
        app:layout_constraintTop_toBottomOf="@+id/rb_saodanhgia_binhluan" />

    <TextView
        android:id="@+id/txtV_Tennguoidung_binhluan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size10dp"
        android:text="TextView"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_Hinhdaidien_binhluan"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtV_cham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="●"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/txtV_Tennguoidung_binhluan"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtV_ThoiGian_binhluan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/txtV_cham"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtV_Phanloai_binhluan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Phân loai: "
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/img_Hinhdaidien_binhluan"
        app:layout_constraintTop_toTopOf="@+id/txtV_Tennguoidung_binhluan" />
</androidx.constraintlayout.widget.ConstraintLayout>